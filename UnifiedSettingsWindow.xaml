<Window x:Class="IgniteBot.UnifiedSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IgniteBot"
        mc:Ignorable="d"
        Title="IgniteBot | Settings" 
		Height="670" Width="600" 
		Background="{DynamicResource BackgroundColour}" 
		Loaded="WindowLoad" 
		FontSize="14" 
		Padding="10,10,10,10" 
		ResizeMode="CanMinimize" 
		SizeToContent="Manual" 
		Icon="/img/ignite_logo_128.png" 
		WindowStartupLocation="CenterOwner">
	<Grid>
		<StackPanel>
			<Label x:Name="label" Content="Settings" FontSize="20" Margin="10,10,10,4"/>
			<TabControl x:Name="tabControl" SelectedIndex="0">
				<TabItem Header="General">
					<ScrollViewer Height="500" VerticalScrollBarVisibility="Auto">
						<StackPanel Margin="10,10,10,10">
							<Button x:Name="firstTimeSetupButton" Content="Show first-time setup window" Margin="10,4,10,4" HorizontalAlignment="Left" Width="207" Padding="4,4,4,4" Click="ShowFirstTimeSetupWindowClicked"/>
							<CheckBox x:Name="startWithWindowsCheckbox" Content="Start with Windows" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,4,10,4" Checked="StartWithWindowsEvent" Unchecked="StartWithWindowsEvent"/>
							<CheckBox x:Name="startMinimizedCheckbox" Content="Start Minimized" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,4,10,4" Checked="StartMinimizedEvent" Unchecked="StartMinimizedEvent"/>
							<CheckBox x:Name="autorestartCheckbox" Content="Autorestart EchoVR into autospectator" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,4,10,4" Checked="RestartOnCrashEvent" Unchecked="RestartOnCrashEvent" ToolTip="Automatically restarts spectatorstream when it crashes"/>
							<CheckBox x:Name="capturevp2Checkbox" Content="Enable -capturevp2 when launching spectator" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,4,10,4" Checked="capturevp2CheckedEvent" Unchecked="capturevp2CheckedEvent"/>
							<CheckBox x:Name="discordRichPresenceCheckbox" Content="Discord Rich Presence" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,4,10,4" Checked="EnableDiscordRichPresenceEvent" Unchecked="EnableDiscordRichPresenceEvent"/>
							<CheckBox x:Name="remoteLoggingCheckbox" Content="Send Logs to Ignite" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,4,10,4" Checked="LogToServerEvent" Unchecked="LogToServerEvent" Visibility="Collapsed"/>
							<Label x:Name="exeLocationLabel" Content="EchoVR Executable Location:" Margin="10,4,10,0"/>
							<TextBox x:Name="exeLocationTextBox" TextWrapping="NoWrap" HorizontalAlignment="Stretch" Margin="10,4,10,4" Padding="4,4,4,4" TextChanged="ExecutableLocationChanged" MaxLines="1"/>

							<StackPanel Orientation="Horizontal" Margin="0,0,0,0" Visibility="Collapsed">
								<ComboBox x:Name="ipSourceSelector" Width="150" SelectedIndex="0" Margin="10,10,10,0" HorizontalAlignment="Left" SelectionChanged="SpeedChangeEvent">
									<ComboBoxItem Content="This PC"/>
									<ComboBoxItem Content="Quest"/>
								</ComboBox>
								<Button Margin="10,10,10,0" Content="Find" Padding="10,1,10,1"/>
							</StackPanel>
							<StackPanel Height="37" Orientation="Horizontal" Margin="10,4,4,-8">
								<Label x:Name="echoVRIPLabel" Content="EchoVR IP (for Quest)" Margin="4,4,4,4"/>
								<TextBox x:Name="echoVRIPTextBox" Text="127.0.0.1" TextWrapping="Wrap" Width="140" Margin="4,4,4,4" VerticalAlignment="Center" FontFamily="Consolas" Padding="4,4,4,4" TextChanged="EchoVRIPChanged"/>
								<TextBox x:Name="echoVRPortTextBox" Text="6721" TextWrapping="Wrap" Width="60" Margin="4,4,4,4" VerticalAlignment="Center" FontFamily="Consolas" Padding="4,4,4,4" TextChanged="EchoVRPortChanged"/>
								<Button x:Name="resetIP" Content="Local PC" Margin="4,4,4,4" Padding="4,4,4,4" Click="resetIP_Click"/>
								<Button x:Name="findQuest" Content="Find Quest IP" Margin="4,4,4,4" Padding="4,4,4,4" Click="FindQuestClick"/>
							</StackPanel>
							<Label x:Name="findQuestStatusLabel" Visibility="Hidden" Content="Searching for Quest" Margin="30,0,0,-10" FontSize="10" FontStyle="Italic"/>
							<CheckBox x:Name="enableStatsLogging" Content="Enable API Processing" Margin="10,20,4,4" Checked="EnableStatsLoggingEvent" Unchecked="EnableStatsLoggingEvent" Visibility="Collapsed"/>
							<GroupBox x:Name="statsLoggingBox" Header="Stats Logging" Margin="10,4,10,4">
								<StackPanel>
									<TextBlock Text="Uploads data to the Personal Ignite database. This is separate from the public match stats, but is still visible on the website. Discord Login is required for stat uploading. Only public matches are uploaded." Margin="4,4,4,4" TextWrapping="Wrap"/>
									<CheckBox x:Name="uploadToIgniteDB" Content="Upload to IgniteVR Database" Margin="4,4,4,4" Checked="UploadToIgniteDBChanged" Visibility="Visible" Unchecked="UploadToIgniteDBChanged"/>
									<CheckBox x:Name="uploadToFirestoreCheckBox" Content="Upload to Firestore" Margin="4,4,4,4" Checked="UploadToFirestoreChanged" Visibility="Visible" Unchecked="UploadToFirestoreChanged"/>
								</StackPanel>
							</GroupBox>
						</StackPanel>
					</ScrollViewer>
				</TabItem>
				<TabItem Header="Replays">
					<ScrollViewer Height="500" VerticalScrollBarVisibility="Auto">
						<StackPanel Margin="10,10,10,10">
							<CheckBox x:Name="enableFullLoggingCheckbox" Content="Save Replays" Margin="10,20,4,4" Checked="EnableFullLoggingEvent" Unchecked="EnableFullLoggingEvent"/>
							<GroupBox x:Name="fullLoggingBox" Header="Replay Logging" Margin="10,4,10,4">
								<StackPanel>
									<CheckBox x:Name="onlyRecordPrivateMatches" Width="588" Content="Only Record Private Matches" Margin="4,4,4,4" Checked="onlyRecordPrivateMatches_CheckedChanged" Unchecked="onlyRecordPrivateMatches_CheckedChanged"/>
									<CheckBox x:Name="batchWritesButton" Width="588" Content="Batch Writes" Margin="4,4,4,4" Checked="BatchWritesEvent" Unchecked="BatchWritesEvent"/>
									<CheckBox x:Name="useCompressionButton" Width="588" Content="Use Compression" Margin="4,4,4,4" Checked="UseCompressionEvent" Unchecked="UseCompressionEvent"/>
									<ComboBox x:Name="speedSelector" Width="211" SelectedIndex="-1" Margin="4,4,4,4" HorizontalAlignment="Left" SelectionChanged="SpeedChangeEvent">
										<ComboBoxItem Content="Fast (60 Hz)"/>
										<ComboBoxItem Content="Med (30 Hz)"/>
										<ComboBoxItem Content="Slow (10 Hz)"/>
									</ComboBox>
									<Label x:Name="saveLocLabel" Content="Save Folder:" Margin="4,4,4,4"/>
									<StackPanel Height="30" Margin="4,4,4,4" Orientation="Horizontal">
										<TextBox x:Name="storageLocationTextBox" TextWrapping="NoWrap" Width="322" Margin="4,0,4,0" VerticalContentAlignment="Center" MaxLines="1"/>
										<Button x:Name="saveLocButton" Content="Browse" Margin="4,0,4,0" Padding="4,4,4,4" Click="SetStorageLocation"/>
										<Button x:Name="resetReplayFolder" Content="Reset" Margin="4,0,4,0" Padding="4,4,4,4" Click="resetReplayFolder_Click"/>
										<Button x:Name="openReplayFolderButton" Content="Open Folder" Margin="4,0,4,0" Padding="4,4,4,4" Click="OpenReplayFolder"/>
									</StackPanel>
									<Label x:Name="splitLabel" Content="Replay File Splitting:" Margin="4,4,4,4"/>
									<StackPanel Height="30" Margin="4,4,4,4" Orientation="Horizontal">
										<ComboBox x:Name="whenToSplitReplays" Width="250" SelectedIndex="0" Margin="4,0,4,0" Height="24.62" SelectionChanged="whenToSplitReplaysChanged">
											<ComboBoxItem Content="Every Round"/>
											<ComboBoxItem Content="Every Match (Scoreboard)"/>
											<ComboBoxItem Content="On Server Change"/>
											<ComboBoxItem Content="Only on IgniteBot Restart"/>
										</ComboBox>
										<Button x:Name="splitFileButton" Content="Split File" Margin="4,0,4,0" Padding="4,4,4,4" Click="SplitFileEvent"/>
										<Label x:Name="currentFilenameLabel" Content="--" Margin="4,0,4,0" Width="246" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
									</StackPanel>
								</StackPanel>
							</GroupBox>
						</StackPanel>
					</ScrollViewer>
				</TabItem>
				<TabItem Header="Text-to-Speech">
					<ScrollViewer VerticalScrollBarVisibility="Auto" Height="500">
						<StackPanel Margin="10,0,10,0">
							<Label x:Name="Title" Content="Text-to-Speech (TTS) Settings" FontSize="16" Margin="5,5,5,5"/>
							<TextBlock x:Name="discordLoginWarning" Margin="16,16,16,16" Padding="10,10,10,10" Background="#FF492727" TextWrapping="Wrap"><Run Text="TTS only works when logged in with Discord!"/><LineBreak/><Run Text="(top left of main window)"/></TextBlock>
							<StackPanel>
								<TextBlock x:Name="instructions" TextWrapping="Wrap" Background="{DynamicResource ControlBrightDefaultBackground}" Padding="10,10,10,10"><Run Text="TTS allows you to hear events while in game. Make sure to set up your speakers appropriately to be able to hear the output. "/><LineBreak/><Run/><LineBreak/><Run Text="On Rift, set your default Windows sound output to the Rift headphones. "/><LineBreak/><Run/><LineBreak/><Run Text="On Quest, use headphones attached to your PC or turn up the speakers."/></TextBlock>
								<Label x:Name="label1" Content="Speech Speed"/>
								<ComboBox x:Name="speechSpeed" Width="146" HorizontalAlignment="Left" SelectedIndex="1" Margin="0,0,0,8" SelectionChanged="SpeechSpeedChanged">
									<ComboBoxItem Content="Slow"/>
									<ComboBoxItem Content="Normal"/>
									<ComboBoxItem Content="Fast"/>
									<ComboBoxItem Content="Very Fast"/>
								</ComboBox>
								<CheckBox x:Name="serverLocationCheckbox" Content="Server Location" Margin="4,10,4,0" Checked="ServerLocationClicked" Unchecked="ServerLocationClicked"/>
								<TextBlock x:Name="label2_Copy2" TextWrapping="WrapWithOverflow" Text="Estimated location of the server as you join" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4"/>
								<CheckBox x:Name="joustTimeCheckbox" Content="Joust Time" Margin="4,10,4,0" Checked="JoustTimeClicked" Unchecked="JoustTimeClicked"/>
								<TextBlock x:Name="label2" TextWrapping="WrapWithOverflow" Text="Time in seconds to reach the midline on neutral jousts for the fastest player on each team" HorizontalAlignment="Stretch" Margin="4,4,4,4"/>
								<CheckBox x:Name="joustSpeedCheckbox" Content="Joust Speed" Margin="4,10,4,0" Checked="JoustSpeedClicked" Unchecked="JoustSpeedClicked"/>
								<TextBlock x:Name="label2_Copy" TextWrapping="WrapWithOverflow" Text="Speed in m/s of the first player on each team to cross the midline on neutral joust" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4"/>
								<CheckBox x:Name="tubeExitSpeedCheckbox" Content="Tube Exit Speed (self)" Margin="4,10,4,0" Checked="TubeExitSpeedClicked" Unchecked="TubeExitSpeedClicked"/>
								<TextBlock x:Name="label2_Copy1" TextWrapping="WrapWithOverflow" Text="Speed in m/s as you exit the launch tube" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4"/>
								<CheckBox x:Name="maxBoostSpeedCheckbox" Content="Max Boost Speed" Margin="4,10,4,0" Checked="MaxBoostClicked" Unchecked="MaxBoostClicked"/>
								<TextBlock x:Name="label2_Copy3" TextWrapping="WrapWithOverflow" Text="Maximum speed achieved for times when you are faster than 20 m/s" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4"/>
								<CheckBox x:Name="throwSpeedCheckbox" Content="Throw Speed" Margin="4,10,4,0" Visibility="Collapsed" Checked="throwSpeedCheckbox_CheckedChanged" Unchecked="throwSpeedCheckbox_CheckedChanged"/>
								<TextBlock x:Name="label2_Copy4" TextWrapping="WrapWithOverflow" Text="Speed in m/s of your throws" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4" Visibility="Collapsed"/>
								<CheckBox x:Name="goalSpeed" Content="Goal Speed" Margin="4,10,4,0" Checked="goalSpeed_CheckedChanged" Unchecked="goalSpeed_CheckedChanged"/>
								<TextBlock x:Name="label2_Copy5" TextWrapping="WrapWithOverflow" Text="Speed in m/s of every goal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4"/>
								<CheckBox x:Name="goalDistance" Content="Goal Distance" Margin="4,10,4,0" Checked="goalDistance_CheckedChanged" Unchecked="goalDistance_CheckedChanged"/>
								<TextBlock x:Name="label2_Copy6" TextWrapping="WrapWithOverflow" Text="Distance in m of every goal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4"/>
								<CheckBox x:Name="gamePausedCheckbox" Content="Game Paused" Margin="4,10,4,0" Checked="GamePausedClicked" Unchecked="GamePausedClicked"/>
								<CheckBox x:Name="playerJoinCheckbox" Content="Player Join" Margin="4,10,4,0" Checked="PlayerJoinClicked" Unchecked="PlayerJoinClicked"/>
								<CheckBox x:Name="playerLeaveCheckbox" Content="Player Leave" Margin="4,10,4,0" Checked="PlayerLeaveClicked" Unchecked="PlayerLeaveClicked"/>
								<CheckBox x:Name="playerSwitchCheckbox" Content="Player Switch Teams" Margin="4,10,4,0" Checked="PlayerSwitchClicked" Unchecked="PlayerLeaveClicked"/>
							</StackPanel>
						</StackPanel>
					</ScrollViewer>
				</TabItem>
				<TabItem Header="NVIDIA Highlights">
					<ScrollViewer Height="500" VerticalScrollBarVisibility="Auto">
						<StackPanel Margin="10,10,10,10">
							<Label x:Name="title" Content="NVIDIA Highlights Settings" FontSize="16" Margin="5,5,5,5" />

							<TextBlock x:Name="instructionsLabel"
                       Text="To enable NVIDIA Highlights, first enable the NVIDIA overlay in Geforce Experience, then enable the Highlights feature from within the overlay (ALT+Z). The events that you want to trigger a clip can be customized in the NVIDIA overlay while the game is open."
                       TextWrapping="Wrap" Margin="5,5,5,5" />

							<TextBlock x:Name="instructionsLabel_Copy"
				Text="Make sure to enable Desktop recording (under the 'Privacy control' section in the overlay), otherwise only this program will be recorded."
				TextWrapping="Wrap" Margin="5,5,5,5" />

							<CheckBox x:Name="enableAutoFocusCheckbox" Content="Autofocus EchoVR" Margin="5,5,5,5" Checked="EnableAutofocusEvent" Unchecked="EnableAutofocusEvent"/>
							<CheckBox x:Name="enableNVHighlightsCheckbox" Content="Enable NVIDIA Highlights" Margin="5,5,5,5" Checked="EnableNVHighlightsEvent" Unchecked="EnableNVHighlightsEvent"/>
							<GroupBox x:Name="nvHighlightsBox" Header="NVIDIA Highlights" Margin="5,5,5,5">
								<StackPanel>
									<Label Content="Highlight Scope" Margin="5,5,5,0" />
									<ComboBox x:Name="highlightScope" Width="197" HorizontalAlignment="Left" Margin="5,5,5,5" SelectionChanged="HighlightScopeChanged" ToolTip="Which events are clipped. All events are clipped when in Spectator mode.">
										<ComboBoxItem Content="Me Only" />
										<ComboBoxItem Content="My Team Only" />
										<ComboBoxItem Content="All Players (both teams)" />
									</ComboBox>
									<CheckBox x:Name="recordAllInSpectator" Content="Record all events in Spectator" Margin="10,10,10,10" Checked="RecordAllInSpectatorEvent" Unchecked="RecordAllInSpectatorEvent" />

									<Label x:Name="timeLabel" Content="Clip Duration:" Margin="0,10,0,0"/>
									<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
										<Label x:Name="labelBefore" Content="Seconds Before:"/>
										<TextBox x:Name="secondsBefore" Text="3" TextWrapping="Wrap" Width="64" FontSize="16" Height="25" PreviewTextInput="NumberValidationTextBox" TextChanged="SecondsBeforeChanged"/>
										<Label x:Name="labelAfter" Content="Seconds After:"/>
										<TextBox x:Name="secondsAfter" Text="2" TextWrapping="Wrap" Width="64" FontSize="16" Height="25" PreviewTextInput="NumberValidationTextBox" TextChanged="SecondsAfterChanged"/>
									</StackPanel>

									<TextBlock x:Name="textBlock"
                               Text="Clear unsaved highlight clips on Ignite Bot exit. If disabled, highlights will be retained forever unless manually deleted from temp folder"
                               TextWrapping="Wrap" Margin="5,10,5,0" />
									<CheckBox x:Name="clearHighlightsOnExitCheckbox" Content="Clear Highlights On Exit"
                              Margin="5,5,5,5" Checked="ClearHighlightsOnExitEvent" Unchecked="ClearHighlightsOnExitEvent" />
									<Button x:Name="clearHighlightsButton" Content="Clear Unsaved Highlights" Width="230"
                            HorizontalAlignment="Left" Margin="5,5,5,5" Height="32" Click="ClearHighlightsEvent" />

								</StackPanel>
							</GroupBox>
						</StackPanel>
					</ScrollViewer>
				</TabItem>
				<TabItem Header="EchoVR Settings" Visibility="Collapsed">

					<ScrollViewer Height="500" VerticalScrollBarVisibility="Auto">
						<Grid />
					</ScrollViewer>
				</TabItem>
				<TabItem Header="About">
					<StackPanel>
						<Image x:Name="logo" Margin="10,10,10,10" Source="/img/ignite_logo_128.png" Width="128" Height="128" HorizontalAlignment="Center" VerticalAlignment="Top"/>
						<Label x:Name="versionNum" Content="version ?" Width="128" Margin="10,10,10,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" Padding="0,0,0,0" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top"/>
						<TextBlock TextWrapping="Wrap" TextAlignment="Center" Margin="10,10,10,10">IgniteBot was made from contributions by these community members:<LineBreak/>
						NtsFranz<LineBreak/>
						VTSxKING<LineBreak/>
						iblowatsports<LineBreak/>
						Graic</TextBlock>
						<TextBlock Margin="20,10,0,-5" Foreground="{DynamicResource ControlDisabledGlythColour}">Contribute</TextBlock>
						<TextBlock TextWrapping="Wrap" Margin="10,10,10,10">Contributions to the IgniteBot are welcome. Check it out on <Hyperlink NavigateUri="https://github.com/NtsFranz/IgniteBot2" RequestNavigate="Hyperlink_RequestNavigate">GitHub</Hyperlink>.</TextBlock>
						<TextBlock Margin="20,10,0,-5" Foreground="{DynamicResource ControlDisabledGlythColour}">Help</TextBlock>
						<TextBlock TextWrapping="Wrap" Margin="10,10,10,10">For help using the IgniteBot, check out the <Hyperlink NavigateUri="https://echopedia.gg/wiki/IgniteBot_Personal" RequestNavigate="Hyperlink_RequestNavigate">Echopedia page</Hyperlink>, or join the <Hyperlink NavigateUri="https://discord.gg/CGXR86C" RequestNavigate="Hyperlink_RequestNavigate">Ignite Discord Server</Hyperlink> and ask questions in the #ignitebot-support channel.</TextBlock>
					</StackPanel>
				</TabItem>
			</TabControl>
		</StackPanel>

		<Button Content="Close" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10,10,10,10" Click="CloseButtonEvent"/>
	</Grid>
</Window>
