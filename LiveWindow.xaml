<Window x:Class="IgniteBot2.LiveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IgniteBot2"
        mc:Ignorable="d"
        Title="LiveWindow" Height="600" Width="1060" FontSize="14" Background="{DynamicResource BackgroundColour}" ResizeMode="CanMinimize" Icon="/ignite_logo.png">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<ColumnDefinition Width="4"/>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition Width="4"/>
			<ColumnDefinition Width="200"/>
		</Grid.ColumnDefinitions>
		<StackPanel x:Name="Left_Sidebar" HorizontalAlignment="Stretch" Height="Auto">
			<Button x:Name="button" Content="Discord Login" Height="40" Width="200"/>
			<GroupBox x:Name="groupBox" Header="Status">
				<StackPanel>
					<Label x:Name="connectedLabel" Width="188" Content="Not Connected"/>
					<Label x:Name="sessionIdLabel" Content="Session ID:"/>
					<TextBox x:Name="sessionIdTextBox" Text="********-****-****-****-************" TextWrapping="Wrap" MaxLines="1" FontSize="8.4" FontFamily="Courier New"/>
					<Label x:Name="serverLocationLabel" Content="Server Location:"/>
					<Label x:Name="discSpeedLabel" Content="Disc Speed: --- m/s"/>
					<GroupBox x:Name="playerSpeedsGroupbox" Header="Player Speeds:">
						<StackPanel x:Name="speedsLayout" Margin="0,0,-12,0"/>
					</GroupBox>
					<GroupBox x:Name="playerPingsGroupbox" Header="Player Pings:">
						<StackPanel Orientation="Horizontal">
							<Label x:Name="playerPingsNames" Content="Label"/>
							<Label x:Name="playerPingsPings" Content="Label"/>
						</StackPanel>
					</GroupBox>
				</StackPanel>
			</GroupBox>
		</StackPanel>
		<GridSplitter x:Name="gridSplitter" Grid.Column="1" HorizontalAlignment="Stretch"/>
		<StackPanel x:Name="Center_Panel" Grid.Column="2">
			<TabControl x:Name="tabControl" Height="499">
				<TabItem x:Name="dashboardTab" Header="Dashboard" FontSize="14">
					<Grid Background="#FFE5E5E5"/>
				</TabItem>
				<TabItem x:Name="eventLogTab" Header="Event Log" FontSize="14">
					<TextBox x:Name="mainOutputTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible"/>
				</TabItem>
			</TabControl>
			<StackPanel Height="48" Orientation="Horizontal" HorizontalAlignment="Right">
				<Button x:Name="rejoinButton" Content="REJOIN" Width="110" Background="#FF6E2F2F" VerticalAlignment="Stretch" Margin="4,4,4,5"/>
				<Button x:Name="showEventLogFileButton" Content="Open Event Log Folder" Width="183" Margin="4,4,4,4" HorizontalAlignment="Left"/>
				<Button x:Name="settingsButton" Content="Settings" Width="100" Margin="4,4,4,4"/>
				<Button x:Name="exitButton" Content="Exit" Width="100" Margin="4,4,4,4" Click="QuitButtonClicked"/>
				<Button x:Name="hideButton" Content="Hide" Width="100" Margin="4,4,4,4" Click="CloseButtonClicked"/>
			</StackPanel>
		</StackPanel>
		<GridSplitter x:Name="gridSplitter_Copy" HorizontalAlignment="Stretch" Margin="1055,242,0,242" Grid.Column="3"/>
		<StackPanel x:Name="Right_Sidebar" Grid.Column="4" HorizontalAlignment="Stretch" Height="Auto">
			<GroupBox x:Name="casterToolsBox" Header="Caster Tools">
				<StackPanel>
					<Label x:Name="label" Content="Stats ID:"/>
					<TextBox x:Name="customIdTextbox" Text="---" MaxLines="1" TextWrapping="Wrap"/>
					<StackPanel Height="40" Orientation="Horizontal">
						<Button x:Name="button4" Content="Split Stats" Margin="4,4,4,4" Width="85"/>
						<Button x:Name="button5" Content="Upload Now" Margin="4,4,4,4" Width="85"/>
					</StackPanel>
					<Button x:Name="button6" Content="Restart as Spectator" Height="35" Margin="4,4,4,4"/>
				</StackPanel>
			</GroupBox>
			<GroupBox x:Name="toolsBox" Header="Tools" Margin="0,8,0,0">
				<StackPanel>
					<Button x:Name="updateButton" Content="Download Update" Height="40" Margin="4,4,4,4" Background="#FF8B3434"/>
					<ProgressBar x:Name="updateProgressBar" Height="10" Margin="4,4,4,4" Visibility="Hidden" VerticalAlignment="Top"/>
					<Button x:Name="enableAPIButton" Content="Enable API in Settings" Height="40" Margin="4,4,4,4"/>
					<Button x:Name="showAtlasLinks" Content="Show Atlas Links" Height="40" Margin="4,4,4,4"/>
					<Button x:Name="playspaceButton" Content="Show Playspace" Height="40" Margin="4,4,4,4"/>
					<Button x:Name="showPlayerSpeedsButton" Content="Show Player Speeds" Height="40" Margin="4,4,4,4"/>
					<Button x:Name="ttsSettings" Content="TTS Settings" Height="40" Margin="4,4,4,4"/>
				</StackPanel>
			</GroupBox>
		</StackPanel>
		<Label x:Name="accessCodeLabel" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="100,0,0,10"/>
		<Label x:Name="versionLabel" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10"/>

	</Grid>
</Window>
