<Window x:Class="Spark.ChooseJoinTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:p="clr-namespace:Spark.Properties"
        xmlns:local="clr-namespace:Spark"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.Join_EchoVR_Match}" 
        Height="160" Width="350" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize" 
        Icon="/img/ignite_logo.ico" 
        Background="#FF232323" 
        FontSize="16">
	<Grid>
		<Button x:Name="playerButton" Width="150" Height="50" Margin="10,0,0,10" Content="{x:Static p:Resources.Player}" Click="JoinAsPlayerClicked" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
		<Button x:Name="spectatorButton" Margin="0,0,10,10" Width="150" Height="50" Content="{x:Static p:Resources.join_as_spectator}" Click="JoinAsSpectatorClicked" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.RowSpan="1"/>
		<Label x:Name="label" Content="{x:Static p:Resources.Join_as_a_Player_or_as_a_Spectator_}" Margin="0,19,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.RowSpan="1" Height="32"/>

	</Grid>
</Window>
