<Window x:Class="Spark.UnifiedSettingsWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:l="clr-namespace:Spark"
		xmlns:p="clr-namespace:Spark.Properties"
		mc:Ignorable="d"
		Title="{x:Static p:Resources.IgniteBot___Settings}"
		Height="700" Width="600"
		Top="{l:SettingBinding settingsWindowTop}"
		Left="{l:SettingBinding settingsWindowLeft}"
		Background="{DynamicResource BackgroundColour}"
		Loaded="WindowLoad"
		FontSize="14"
		Padding="10,10,10,10"
		ResizeMode="CanResize"
		SizeToContent="Manual"
		Icon="/img/ignite_logo.ico"
		WindowStartupLocation="Manual"
		DataContext="{Binding RelativeSource={RelativeSource Self}}"
		>
	<Window.Resources>
		<l:EchoVRSettingsManager x:Key="es"/>
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="52" />
			<RowDefinition />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>
		<Label x:Name="label" Content="{x:Static p:Resources.Settings}" FontSize="20" Margin="10,10,10,0" />

		<TabControl x:Name="tabControl" SelectedIndex="0" Grid.Row="1">

			<TabItem Header="{x:Static p:Resources.General}" Padding="8,6,8,6">
				<ScrollViewer  VerticalScrollBarVisibility="Auto">
					<StackPanel Margin="10,0,10,10">
						<StackPanel Orientation="Horizontal">
							<Label Content="{x:Static p:Resources.Language}" Margin="10,10,4,4" />
							<ComboBox Margin="4,10,10,4" HorizontalAlignment="Left" Width="148" SelectedIndex="{l:SettingBinding languageIndex}" >
								<ComboBoxItem>English</ComboBoxItem>
								<ComboBoxItem>日本語</ComboBoxItem>
							</ComboBox>
							<Label Content="{x:Static p:Resources._Requires_Restart_}" Margin="10,10,4,4"/>
						</StackPanel>
						<Button x:Name="firstTimeSetupButton" Content="{x:Static p:Resources.Show_first_time_setup_window}"
									Margin="10,4,10,4" HorizontalAlignment="Left" Width="207" Padding="4,4,4,4"
									Click="ShowFirstTimeSetupWindowClicked" />
						<CheckBox x:Name="startWithWindowsCheckbox" Content="{x:Static p:Resources.Start_with_Windows}"
									  IsChecked="{Binding StartWithWindows}" HorizontalAlignment="Left"
									  VerticalAlignment="Stretch" Margin="10,4,10,4" />
						<CheckBox x:Name="startMinimizedCheckbox" Content="{x:Static p:Resources.Start_Minimized}"
									  IsChecked="{l:SettingBinding startMinimized}" HorizontalAlignment="Left"
									  VerticalAlignment="Stretch" Margin="10,4,10,4" />
						<CheckBox x:Name="autorestartCheckbox" Content="{x:Static p:Resources.Autorestart_EchoVR_into_autospectator}"
									  IsChecked="{l:SettingBinding autoRestart}" HorizontalAlignment="Left"
									  VerticalAlignment="Stretch" Margin="10,4,10,4"
									  ToolTip="Automatically restarts spectatorstream when it crashes" />
						<CheckBox x:Name="capturevp2Checkbox" Content="{x:Static p:Resources.Enable__capturevp2_when_launching_spectator}"
									  IsChecked="{l:SettingBinding capturevp2}" HorizontalAlignment="Left"
									  VerticalAlignment="Stretch" Margin="10,4,10,4" />
						<CheckBox x:Name="discordRichPresenceCheckbox" Content="{x:Static p:Resources.Discord_Rich_Presence}"
									  IsChecked="{l:SettingBinding discordRichPresence}" HorizontalAlignment="Left"
									  VerticalAlignment="Stretch" Margin="10,4,10,4" />
						<CheckBox x:Name="discordRichPresenceServerLocationCheckbox" Content="Show Server Location in Discord RP status"
									  IsChecked="{l:SettingBinding discordRichPresenceServerLocation}" HorizontalAlignment="Left"
									  VerticalAlignment="Stretch" Margin="10,4,10,4" />
						<CheckBox x:Name="remoteLoggingCheckbox" Content="Send Logs to Ignite"
									  IsChecked="{l:SettingBinding logToServer}" HorizontalAlignment="Left"
									  VerticalAlignment="Stretch" Margin="10,4,10,4" Visibility="Collapsed" />
						<CheckBox x:Name="LowFrequencyModeCheckBox" Content="Low Frequency Mode" ToolTip="Queries the API less frequently if you are having performance problems."
						          IsChecked="{l:SettingBinding lowFrequencyMode}" HorizontalAlignment="Left"
						          VerticalAlignment="Stretch" Margin="10,4,10,4" />
						<CheckBox x:Name="enableAutoFocusCheckbox" Content="{x:Static p:Resources.Autofocus_EchoVR}" Margin="10,4,10,4" IsChecked="{l:SettingBinding isAutofocusEnabled}" ToolTip="{x:Static p:Resources.enableAutoFocusCheckbox_ToolTip}"/>
						<CheckBox Content="Spectatorstream opens Echo Combat" Margin="10,4,10,4" IsChecked="{l:SettingBinding spectatorStreamCombat}" ToolTip="The Open Spectatatorstream button opens Echo Combat instead."/>
						<CheckBox Content="Use anonymous mode for Spectatorstream" Margin="10,4,10,4" IsChecked="{l:SettingBinding spectatorStreamNoOVR}" ToolTip="Your username will show up as anonymous when launching the spectatorstream. This also allows you to have two instances of EchoVR open at once."/>
						<CheckBox Content="Allow Spectate Me on local PC" Margin="10,4,10,4" IsChecked="{l:SettingBinding allowSpectateMeOnLocalPC}" ToolTip="Enables the Spectate Me function when your IP is 127.0.0.1. This is not recommended and is still experimental."/>
						<CheckBox Content="Use anonymous mode in Spectate Me" Margin="10,4,10,4" IsChecked="{l:SettingBinding useAnonymousSpectateMe}" ToolTip="Enables the anonymous mode for the Spectate Me function. Uncheck this to use a second Oculus account for your spectator."/>
						<CheckBox Content="Spectate Me on by default" Margin="10,4,10,4" IsChecked="{l:SettingBinding spectateMeOnByDefault}" ToolTip="Automatically enables the Spectate Me feature when Spark starts."/>
						<CheckBox x:Name="enableBetasCheckbox" Content="{x:Static p:Resources.Get_Beta_Updates_to_Spark}" Margin="10,4,10,4" IsChecked="{l:SettingBinding betaUpdates}" ToolTip="{x:Static p:Resources.betaUpdates_ToolTip}"/>

						<StackPanel Orientation="Horizontal" Margin="10,4,10,4">
							<Label Content="Interface Theme"/>
							<ComboBox SelectedIndex="{Binding SetTheme}" Width="50">
								<ComboBoxItem>
									<Rectangle Width="20" Height="20" Fill="Yellow"/>
								</ComboBoxItem>
								<ComboBoxItem>
									<Rectangle Width="20" Height="20" Fill="Orange"/>
								</ComboBoxItem>
								<ComboBoxItem>
									<Rectangle Width="20" Height="20" Fill="Red"/>
								</ComboBoxItem>
							</ComboBox>
						</StackPanel>
						<Label x:Name="exeLocationLabel" Content="{x:Static p:Resources.EchoVR_Executable_Location_}" Margin="10,4,10,0" />
						<TextBox x:Name="exeLocationTextBox"
									 Text="{l:SettingLoad echoVRPath}" TextWrapping="NoWrap"
									 HorizontalAlignment="Stretch"
									 Margin="10,4,10,4" Padding="4,4,4,4" TextChanged="ExecutableLocationChanged"
									 MaxLines="1" />

						<Label x:Name="thisPCLocalIP"/>
						<StackPanel Height="37" Orientation="Horizontal" Margin="10,4,4,-8">
							<Label x:Name="echoVRIPLabel" Content="{x:Static p:Resources.EchoVR_IP__for_Quest_}" Margin="4,4,4,4" />
							<TextBox x:Name="echoVRIPTextBox" Text="{l:SettingLoad echoVRIP}" TextWrapping="Wrap" Width="130"
										 Margin="4,4,4,4" VerticalAlignment="Center" FontFamily="Consolas"
										 Padding="4,4,4,4" TextChanged="EchoVRIPChanged" />
							<TextBox x:Name="echoVRPortTextBox" Text="{l:SettingLoad echoVRPort}" TextWrapping="Wrap" Width="60"
										 Margin="4,4,4,4" VerticalAlignment="Center" FontFamily="Consolas"
										 Padding="4,4,4,4" TextChanged="EchoVRPortChanged" />
							<Button x:Name="resetIP" Content="{x:Static p:Resources.Local_PC}" Margin="4,4,4,4" Padding="4,4,4,4"
										Click="resetIP_Click" />
							<Button x:Name="findQuest" Content="{x:Static p:Resources.Find_Quest_IP}" Margin="4,4,4,4" Padding="4,4,4,4"
										Click="FindQuestClick" />
						</StackPanel>
						<Label x:Name="findQuestStatusLabel" Visibility="Hidden" Content="{x:Static p:Resources.Searching_for_Quest}"
								   Margin="30,0,0,0" FontSize="10" FontStyle="Italic" />
						<CheckBox x:Name="enableStatsLoggingCheckBox" Content="Enable API Processing"
									  IsChecked="{l:SettingBinding enableStatsLogging}" Margin="10,20,4,4"
									  Visibility="Collapsed" />
						<GroupBox x:Name="statsLoggingBox" Header="{x:Static p:Resources.Stats_Logging}" Margin="10,4,10,4" IsEnabled="{Binding DiscordLoggedIn}">
							<StackPanel Margin="-1,0,0,0">
								<TextBlock
										Text="{x:Static p:Resources.upload_description}"
										Margin="4,4,4,4" TextWrapping="Wrap" />
								<CheckBox x:Name="uploadToIgniteDBCheckBox" Content="{x:Static p:Resources.Upload_to_IgniteVR_Database}"
											  IsChecked="{l:SettingBinding uploadToIgniteDB}"
											  Margin="4,4,4,4" Visibility="Visible" />
								<CheckBox x:Name="optInCheckbox" Content="{x:Static p:Resources.optInCheckbox_Content}" Margin="4,4,4,4" Unchecked="OptIn" Checked="OptIn" ToolTip="{x:Static p:Resources.optInCheckbox_ToolTip}"/>
								<Label x:Name="optInStatusLabel" Content="Fetching opt-in status..." Margin="30,-6,0,0" FontSize="10"/>
								<CheckBox x:Name="uploadToFirestoreCheckBox" Content="{x:Static p:Resources.Upload_to_Firestore}"
											  IsChecked="{l:SettingBinding uploadToFirestore}"
											  Visibility="{Binding FirestoreVisible}"
											  Margin="4,4,4,4" />
								<Button Click="UploadTabletStats" Height="30" Margin="10,10,10,10">Upload Tablet Stats</Button>
								<CheckBox Content="Save Events to Local CSV"
								          IsChecked="{l:SettingBinding saveEventsToCSV}"
								          Margin="4,4,4,4" Visibility="Collapsed" />
							</StackPanel>
						</GroupBox>

						<GroupBox Header="{x:Static p:Resources.Spectator_Camera_Settings}" Margin="10,4,10,4" >
							<StackPanel>
								<TextBlock Text="{x:Static p:Resources.CameraSettingsDescription}" TextWrapping="Wrap" Margin="10,10,10,10"></TextBlock>
								<CheckBox x:Name="HideUICheckbox" Content="{x:Static p:Resources.Hide_EchoVR_UI}" IsChecked="{l:SettingBinding hideEchoVRUI}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,4,10,4" Click="HideEchoVRUINow"/>
								<CheckBox Content="{x:Static p:Resources.Toggle_Minimap_after_Goals}" IsChecked="{l:SettingBinding toggleMinimapAfterGoals}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,4,10,4" />
								<CheckBox x:Name="HideMinimapCheckbox" Content="Don't Show Minimap (M)" IsChecked="{l:SettingBinding alwaysHideMinimap}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,4,10,4" Click="HideMinimapNow" />
								<CheckBox x:Name="MutePlayerCommsCheckbox"  Content="Mute Player Comms (F5)" IsChecked="{l:SettingBinding mutePlayerComms}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,4,10,4"  Click="ToggleTeamMuteNow"/>
								<CheckBox x:Name="HideNameplates" Content="Hide Player Nameplates" IsChecked="{l:SettingBinding hideNameplates}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,4,10,4"  Click="ToggleNameplatesNow"/>
								<Label Content="{x:Static p:Resources.Camera_Mode_}"/>
								<StackPanel Orientation="Horizontal">
									<ComboBox SelectedIndex="{l:SettingBinding spectatorCamera}" SelectionChanged="CameraModeDropdownChanged" Margin="10,4,10,4" HorizontalAlignment="Left" Width="300">
										<ComboBoxItem Content="{x:Static p:Resources.Auto__leave_default_}"/>
										<ComboBoxItem Content="{x:Static p:Resources.Sideline}"/>
										<ComboBoxItem Content="{x:Static p:Resources.Follow_client_player___Spectate_Me__only_}"/>
										<ComboBoxItem Content="Follow specific player"/>
									</ComboBox>
									<Button x:Name="findCameraNowButton" Content="Find Now" Click="SpectatorCameraFindNow" Padding="10,1,10,1"/>
								</StackPanel>
								<StackPanel x:Name="followSpecificPlayerPanel" Orientation="Horizontal" Margin="0,8,0,0">
									<Label Content="Follow specific player name:"/>
									<TextBox Text="{l:SettingBinding followPlayerName}" Width="200" Margin="10,0,0,0" VerticalContentAlignment="Center"/>
								</StackPanel>
								<Label x:Name="followCameraModeLabel" Content="{x:Static p:Resources.Follow_client_player_camera_mode_}"/>
								<ComboBox x:Name="followCameraModeDropdown" SelectedIndex="{l:SettingBinding followPlayerCameraMode}" Margin="10,4,10,4" HorizontalAlignment="Left" Width="300">
									<ComboBoxItem Content="{x:Static p:Resources.Follow}"/>
									<ComboBoxItem Content="{x:Static p:Resources.POV}"/>
								</ComboBox>
							</StackPanel>
						</GroupBox>
					</StackPanel>
				</ScrollViewer>
			</TabItem>


			<TabItem Header="{x:Static p:Resources.Replays}" Padding="8,6,8,6">
				<ScrollViewer  VerticalScrollBarVisibility="Auto">
					<StackPanel Margin="10,0,10,10">
						<Label Content="{x:Static p:Resources.Replay_Recording_Settings}" FontSize="16" Margin="5,5,5,5" />
						<TextBlock TextWrapping="Wrap"
									   Background="{DynamicResource ControlBrightDefaultBackground}"
									   Padding="10,10,10,10">
							<Run Text="{x:Static p:Resources.replays_description_part_1}"/>
								<LineBreak /><LineBreak />
							<Run Text="{x:Static p:Resources.replays_description_part_2}"/>
								<Hyperlink NavigateUri="https://echopedia.gg/wiki/Replay_Viewer"
										   RequestNavigate="Hyperlink_RequestNavigate">
									<Run Text="{x:Static p:Resources.Echo_Arena_Replay_Viewer}"/>
								</Hyperlink>
								<LineBreak /><LineBreak />
							<Run Text="{x:Static p:Resources.replays_description_part_3}"/>
								<Hyperlink NavigateUri="https://echopedia.gg/wiki/.echoreplay_File_Format"
										   RequestNavigate="Hyperlink_RequestNavigate">
									<Run Text="{x:Static p:Resources.replays_description_part_4}"/>
								</Hyperlink>
						</TextBlock>
						<CheckBox x:Name="enableFullLoggingCheckbox" Content="{x:Static p:Resources.Save_Replays}" Margin="10,10,4,4"
									  IsChecked="{l:SettingBinding enableFullLogging}" />
						<GroupBox x:Name="fullLoggingBox" Header="{x:Static p:Resources.Replay_Logging}" Margin="4,4,4,4"
									  IsEnabled="{Binding ElementName=enableFullLoggingCheckbox, Path=IsChecked}">
							<StackPanel>
								<CheckBox Content="Save to .echoreplay format" Margin="4,4,4,4" IsChecked="{l:SettingBinding saveEchoreplayFiles}" />
								<CheckBox Content="Save to .butter format" Margin="4,4,4,4" IsChecked="{l:SettingBinding saveButterFiles}" />
								
								<CheckBox Content="Save player bones data" Margin="4,4,4,4" IsChecked="{l:SettingBinding fetchBones}" />
								
								<CheckBox x:Name="onlyRecordPrivateMatchesCheckBox" Width="588"
											  Content="{x:Static p:Resources.Only_Record_Private_Matches}" Margin="4,4,4,4"
											  IsChecked="{l:SettingBinding onlyRecordPrivateMatches}" />
								<CheckBox x:Name="batchWritesButton" Width="588" Content="{x:Static p:Resources.Batch_Writes}"
											  IsChecked="{l:SettingBinding batchWrites}"
											  Margin="4,4,4,4" />
								<CheckBox x:Name="useCompressionButton" Width="588" Content="{x:Static p:Resources.Use_Compression}"
											  IsChecked="{l:SettingBinding useCompression}"
											  Margin="4,4,4,4" />
								<ComboBox x:Name="speedSelector"
											  SelectedIndex="{l:SettingBinding targetDeltaTimeIndexFull}"
											  Width="211" Margin="4,4,4,4" HorizontalAlignment="Left">
									<ComboBoxItem Content="{x:Static p:Resources.Fast__60_Hz_}" />
									<ComboBoxItem Content="{x:Static p:Resources.Med__30_Hz_}" />
									<ComboBoxItem Content="{x:Static p:Resources.Slow__10_Hz_}" />
								</ComboBox>
								<Label x:Name="saveLocLabel" Content="{x:Static p:Resources.Save_Folder_}" Margin="4,4,4,4" />
								<StackPanel Height="32" Margin="4,4,4,4" Orientation="Horizontal">
									<TextBox x:Name="storageLocationTextBox" TextWrapping="NoWrap" Width="300"
												 Margin="4,0,4,0" VerticalContentAlignment="Center" MaxLines="1"
												 IsReadOnly="True"
												 Text="{l:SettingLoad saveFolder}" />
									<Button x:Name="saveLocButton" Content="{x:Static p:Resources.Browse}" Margin="4,0,4,0"
												Padding="4,4,4,4" Click="SetStorageLocation" />
									<Button x:Name="resetReplayFolder" Content="{x:Static p:Resources.Reset}" Margin="4,0,4,0"
												Padding="4,4,4,4" Click="ResetReplayFolder" />
									<Button x:Name="openReplayFolderButton" Content="{x:Static p:Resources.Open_Folder}" Margin="4,0,4,0"
												Padding="4,4,4,4" Click="OpenReplayFolder" />
								</StackPanel>
								<Label x:Name="splitLabel" Content="{x:Static p:Resources.Replay_File_Splitting_}" Margin="4,4,4,4" />
								<StackPanel Height="30" Margin="4,4,4,4" Orientation="Horizontal">
									<ComboBox x:Name="whenToSplitReplaysDropdown" Width="210"
												  SelectedIndex="{l:SettingBinding whenToSplitReplays}"
												  Margin="4,0,4,0" Height="24.62">
										<ComboBoxItem Content="{x:Static p:Resources.Every_Round}" />
										<ComboBoxItem Content="{x:Static p:Resources.Every_Match__Scoreboard_}" />
										<ComboBoxItem Content="{x:Static p:Resources.On_Server_Change}" />
										<ComboBoxItem Content="{x:Static p:Resources.Only_on_IgniteBot_Restart}" />
									</ComboBox>
									<Button x:Name="splitFileButton" Content="{x:Static p:Resources.Split_File}" Margin="4,0,4,0"
												Padding="4,4,4,4" Click="SplitFileButtonClicked" />
									<Label x:Name="currentFilenameLabel" Content="{Binding ReplayFilename, Mode=OneWay}" Margin="4,0,4,0" Width="240"
											   ScrollViewer.VerticalScrollBarVisibility="Disabled" />
								</StackPanel>
							</StackPanel>
						</GroupBox>
					</StackPanel>
				</ScrollViewer>
			</TabItem>


			<TabItem Header="{x:Static p:Resources.Text_to_Speech}" Padding="8,6,8,6">
				<ScrollViewer VerticalScrollBarVisibility="Auto" >
					<StackPanel Margin="10,0,10,10">
						<Label Content="{x:Static p:Resources.Text_to_Speech__TTS__Settings}" FontSize="16"
								   Margin="5,5,5,5" />
						<TextBlock x:Name="discordLoginWarning" Margin="16,16,16,16" Padding="10,10,10,10"
									   Background="#FF492727" TextWrapping="Wrap"
									   Visibility="{Binding DiscordNotLoggedInVisible}">
								<Run Text="{x:Static p:Resources.TTS_only_works_when_logged_in_with_Discord_}" />
						</TextBlock>
						<StackPanel>
							<TextBlock x:Name="instructions" TextWrapping="Wrap"
										   Background="{DynamicResource ControlBrightDefaultBackground}"
										   Padding="10,10,10,10" 
										   Text="{x:Static p:Resources.tts_description}" />
							<Grid Margin="5,5,5,5">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition Height="*"/>
									<RowDefinition Height="*"/>
								</Grid.RowDefinitions>
								<Label x:Name="label1" Content="{x:Static p:Resources.Speech_Speed}" />
								<ComboBox Width="146" HorizontalAlignment="Left"
										  SelectedIndex="{Binding SpeechSpeed}"
										  Margin="0,0,0,8" Grid.Row="1">
									<ComboBoxItem Content="{x:Static p:Resources.Slow}" />
									<ComboBoxItem Content="{x:Static p:Resources.Normal}" />
									<ComboBoxItem Content="{x:Static p:Resources.Fast}" />
									<ComboBoxItem Content="{x:Static p:Resources.Very_Fast}" />
								</ComboBox>
								<Label Content="{x:Static p:Resources.Voice}" Grid.Column="1" />
								<ComboBox Width="146" HorizontalAlignment="Left"
										  SelectedIndex="{l:SettingBinding ttsVoice}"
										  Margin="0,0,0,8" Grid.Column="1" Grid.Row="1">
									<ComboBoxItem Content="{x:Static p:Resources.Male}" />
									<ComboBoxItem Content="{x:Static p:Resources.Female}" />
								</ComboBox>
								<CheckBox Grid.Row="1" Grid.Column="2"  Content="Use Wavenet Voices" Margin="4,-15,4,0" IsChecked="{l:SettingBinding useWavenetVoices}" />
								<!-- <Label Content="{x:Static p:Resources.Language}" Grid.Column="2" /> -->
								<!-- <ComboBox Width="146" HorizontalAlignment="Left" -->
								<!--                                   SelectedIndex="{l:SettingBinding ttsLanguage}" -->
								<!--                                   Margin="0,0,0,8" Grid.Column="2" Grid.Row="1"> -->
								<!-- 	<ComboBoxItem Content="English" /> -->
								<!-- 	<ComboBoxItem Content="日本語" /> -->
								<!-- </ComboBox> -->
							</Grid>
							<CheckBox x:Name="serverLocationCheckbox" Content="{x:Static p:Resources.Server_Location}" Margin="4,10,4,0"
										  IsChecked="{Binding ServerLocation}" />
							<TextBlock TextWrapping="WrapWithOverflow"
										   Text="{x:Static p:Resources.Estimated_location_of_the_server_as_you_join}"
										   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4" />
							<CheckBox Content="{x:Static p:Resources.Throw_Speed}" Margin="4,10,4,0"
										  Visibility="Visible" IsChecked="{Binding ThrowSpeed}" />
							<TextBlock TextWrapping="WrapWithOverflow" Text="{x:Static p:Resources.Total_throw_speed_from_the_F10_menu}"
										   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4" />
							<CheckBox x:Name="joustTimeCheckbox" Content="{x:Static p:Resources.Joust_Time}" Margin="4,10,4,0"
										  IsChecked="{Binding JoustTime}" />
							<TextBlock TextWrapping="WrapWithOverflow"
										   Text="{x:Static p:Resources.Time_in_seconds_to_reach_the_midline_on_neutral_jousts_for_the_fastest_player_on_each_team}"
										   HorizontalAlignment="Stretch" Margin="4,4,4,4" />
							<CheckBox x:Name="joustSpeedCheckbox" Content="{x:Static p:Resources.Joust_Speed}" Margin="4,10,4,0"
										  IsChecked="{Binding JoustSpeed}" />
							<TextBlock TextWrapping="WrapWithOverflow"
										   Text="{x:Static p:Resources.Speed_in_m_s_of_the_first_player_on_each_team_to_cross_the_midline_on_neutral_joust}"
										   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4" />
							<CheckBox x:Name="tubeExitSpeedCheckbox" Content="{x:Static p:Resources.Tube_Exit_Speed__self_}"
										  Margin="4,10,4,0"
										  IsChecked="{Binding TubeExitSpeed}" />
							<TextBlock TextWrapping="WrapWithOverflow"
										   Text="{x:Static p:Resources.Speed_in_m_s_as_you_exit_the_launch_tube}"
										   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4" />
							<CheckBox x:Name="maxBoostSpeedCheckbox" Content="{x:Static p:Resources.Max_Boost_Speed}" Margin="4,10,4,0"
										  IsChecked="{Binding MaxBoostSpeed}" />
							<TextBlock TextWrapping="WrapWithOverflow"
										   Text="{x:Static p:Resources.Maximum_speed_achieved_for_times_when_you_are_faster_than_20_m_s}"
										   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4" />
							<TextBlock TextWrapping="WrapWithOverflow"
										   Text="{x:Static p:Resources.Speed_in_m_s_of_your_throws}" HorizontalAlignment="Stretch"
										   VerticalAlignment="Stretch" Margin="4,4,4,4" Visibility="Collapsed" />
							<CheckBox x:Name="goalSpeed" Content="{x:Static p:Resources.Goal_Speed}" Margin="4,10,4,0"
										  IsChecked="{Binding GoalSpeed}" />
							<TextBlock TextWrapping="WrapWithOverflow"
										   Text="{x:Static p:Resources.Speed_in_m_s_of_every_goal}" HorizontalAlignment="Stretch"
										   VerticalAlignment="Stretch" Margin="4,4,4,4" />
							<CheckBox x:Name="goalDistance" Content="{x:Static p:Resources.Goal_Distance}" Margin="4,10,4,0"
										  IsChecked="{Binding GoalDistance}" />
							<TextBlock TextWrapping="WrapWithOverflow"
										   Text="{x:Static p:Resources.Distance_in_m_of_every_goal}" HorizontalAlignment="Stretch"
										   VerticalAlignment="Stretch" Margin="4,4,4,4" />
