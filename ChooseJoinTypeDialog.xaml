<Window x:Class="IgniteBot.ChooseJoinTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IgniteBot"
        mc:Ignorable="d"
        Title="Join EchoVR Match" Height="160" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="CanResize" Icon="/img/ignite_logo.ico" Background="#FF232323" FontSize="16">
	<Grid>
		<Button x:Name="playerButton" Width="150" Height="50" Margin="10,0,0,10" Content="Player" Click="JoinAsPlayerClicked" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
		<Button x:Name="spectatorButton" Margin="0,0,10,10" Width="150" Height="50" Content="Spectator" Click="JoinAsSpectatorClicked" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.RowSpan="1"/>
		<Label x:Name="label" Content="Join as a Player or as a Spectator?" Margin="0,19,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.RowSpan="1" Height="32"/>

	</Grid>
</Window>
